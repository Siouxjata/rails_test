<h1>Groups You Can Join!</h1>

	<div class="creategroup">
		<% @groups.each do |group| %>
 			
                <p>
                	<a href="/groups/<%=group.id %>">
                		<%= group.name %>	
                	</a>
                </p>
                <p>Members: <%= group.total_members %></p>
                <p>Description: <%= group.description %></p>
            <hr>
        <% end %>
     </div>

	<div class="creategroup">
		<h3>Please Create a New Group Here!</h3>
		<form action="/groups/create" method="post">
			<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token %>">

		<p>Org Name: <input type="text" name="group[name]" placeholder="Group Name"></p>

		<p>Description: <input type="text" name="group[description]" placeholder="Description"></p>

		<input type="submit" value="Create Group">
		</form>

	</div>
